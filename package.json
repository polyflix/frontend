{
  "name": "polyflix",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "BUILD_MODE=local vite",
    "build": "vite build",
    "lint": "eslint --cache src/ public/locales/**/*.json",
    "lint:ci": "npm run lint",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src",
    "serve": "vite preview",
    "fix:lint": "eslint --cache --fix src/ public/locales/**/*.json",
    "fix:format": "prettier --write ./src",
    "fix": "npm-run-all -p fix:*"
  },
  "dependencies": {},
  "devDependencies": {
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.17.1"
}
