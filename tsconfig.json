{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/modules/core/*"],
      "@env/*": ["src/environments/*"],
      "@theme/*": ["src/theme/*"],
      "@auth/*": ["src/modules/authentication/*"],
      "@collections/*": ["src/modules/collections/*"],
      "@users/*": ["src/modules/users/*"],
      "@videos/*": ["src/modules/videos/*"],
      "@quizzes/*": ["src/modules/quizzes/*"],
      "@subtitles/*": ["src/modules/subtitles/*"],
      "@stats/*": ["src/modules/stats/*"]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "types": ["reflect-metadata", "cypress", "@testing-library/cypress"]
  },
  "include": ["./src"]
}
